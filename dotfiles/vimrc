set number
syntax on

" Automatically adds curlybraces
filetype indent on

" Sets tab to 4 spaces
set tabstop=4
set shiftwidth=4
set expandtab

" Arrow keys removal
nnoremap <up> <nop>
nnoremap <down> <nop>
nnoremap <left> <nop>
nnoremap <right> <nop>

" Encoding 
let g:Powerline_symbols = 'unicode'
set laststatus=2
set encoding=utf-8
set t_Co=256

" Powerline
"set fillchars+=stl:\ ,stlnc:\
"python from powerline.vim import setup as powerline_setup
"python powerline_setup()
"python del powerline_setup

" Scrollwheel
set mouse=a
map <ScrollWheelUp> <C-Y>
map <ScrollWheelDown> <C-E>

