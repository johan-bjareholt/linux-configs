	bspc window -e {right -10,up +10,down -10,left +10}

# ?
super + ctrl + {1-9}
	bspc window -r 0.{1-9}
# ?
~button1
	bspc pointer -g focus

# ?
super + !button{1-3}
	bspc pointer -t %i %i

# ?
super + @button{1-3}
	bspc pointer -u

