#
# bspwm hotkeys
#

#
#	General
#

# Close BSPWM
super + shift + Escape
	bspc quit

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


#
#	Window handling
#

# Close window
super + q 
	bspc window -c

# Fullscreen?
super + t
	bspc desktop -l next

# x floating
# f fullscreen
super + {x,f}
	bspc window -t {floating,fullscreen}




#
#	Window Management
#

# Switch focus vim style
# Move windows vim style
super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

# Switch focus WASD style
# Move windows WASD style
super + {_,shift + }{w,a,s,d}
	bspc window -{f,s} {up,left,down,right}

# Set insertion mode WASD style
alt + {w,a,s,d}
	bspc window --presel {up,left,down,right}

# Move window vim style
super + shift + {h,j,k,l}
	bspc window -p {left,down,up,right}

# Rezise windows in tile
super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

# Move window with mouse
# Resize window with mouse
super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}



#
#	Workspace Management
#

# Switch to workspace
super + {1-9}
	MONITORNUM=$(~/.bspwm/getMonitorN) ; \
	bspc desktop -f $MONITORNUM"{1-9}"
# Move window to workspace
super + shift + {1-9}
	MONITORNUM=$(~/.bspwm/getMonitorN) ; \
	bspc window -d $MONITORNUM"{1-9}"

#
# Application shortcuts
#

super + Return
	urxvt

super + space
	dmenu_run

super + r
	dmenu_run

#
#	Sound
#

# Mute
{XF86AudioMute,super + F8}
	~/Scripts/volume.sh toggle

# Raise volume
{XF86AudioRaiseVolume,super + F10}
	amixer -D pulse sset Master 2%+; echo "V" > /tmp/panelfifo

# Lower volume
{XF86AudioLowerVolume,super + F9}
	amixer -D pulse sset Master 2%-; echo "V" > /tmp/panelfifo

Print
	cd ~/Pictures/Screenshots ; scrot

#
#	Backlight
#

super + F6
	xbacklight -dec 5

super + F7
	xbacklight -inc 5

#
# Small Laptop Shortcuts
#

# End
alt + Right
	xvkbd -xsendevent -text '\[End]'

# Home
alt + Left
	xvkbd -xsendevent -text '\[Home]'

# Page up
alt + Up
	xvkbd -xsendevent -text '\[Page_Up]'

# Page down
alt + Down
	xvkbd -xsendevent -text '\[Page_Down]'

# Delete
alt + Backspace
	xvkbd -xsendevent -text '\[Delete]'

