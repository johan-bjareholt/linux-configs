#!/bin/bash

FG='#FFFFFF'
BG='#504545'
FONT="-*-liberation mono-medium-r-*-*-12-*-*-*-*-*-*-*"
PANEL_FIFO=/tmp/panelfifo

mkfifo $PANEL_FIFO

bspc config top_padding $PANEL_HEIGHT
bspc control --subscribe > "$PANEL_FIFO" &


screenC=1
if [ $HOSTNAME = "johan-desktop" ]; then
	screenC=3
fi


cat "$PANEL_FIFO" | ~/.bspwm/bartext $screenC | lemonbar -p -B $BG -F $FG -f "$FONT" &

$(
while true
  do
	echo T > $PANEL_FIFO
	sleep 60
done
) &
