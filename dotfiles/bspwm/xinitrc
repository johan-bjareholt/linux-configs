#!/bin/bash

# Setup Xresources
[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources

# Setup monitors
$(
	if [ "$HOSTNAME" = "johan-desktop" ]
	  then
		xrandr --output HDMI-0 --pos 0x0 --rotate left
		xrandr --output DVI-D-0 --right-of HDMI-0 --primary --mode 1920x1080
		xrandr --output DVI-I-0 --right-of DVI-D-0 --rotate left
	fi
	feh --bg-fill ~/Pictures/Wallpapers/arch-black-welcome-home.png
	# Panel
	$HOME/.bspwm/bar &
) &


# Set mouse cursor
xsetroot -cursor_name left_ptr &

# Autostart applications
start-pulseaudio-x11 &
wmname LG3D &

# Start DE components
compton -D 0 &
sxhkd -c $HOME/.bspwm/sxhkdrc &
exec bspwm -c $HOME/.bspwm/bspwmrc
